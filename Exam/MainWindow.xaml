<Window x:Class="Exam.MainWindow "
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exam"
        mc:Ignorable="d"
        Title="Travel guide" Height="350" Width="400">
    <StackPanel Background="#EE82EE" >
        <TextBlock  Text="Welcome to the program!" Margin="10" FontWeight="Bold" FontSize="20"/>
        <TextBlock Text="&quot;Travel guide&quot;" Margin="10" FontWeight="Bold" FontSize="15" HorizontalAlignment="Right"/>
        <Button Content="Start!" Click="Next_Button" Margin="10" Background="BlueViolet"/>
        <Button Content="Exit" Click="Close_Button" Margin="10" Background="BlueViolet"/>
    </StackPanel>
</Window>
